extends layout

block content
  ul.background-list.js-background
  a.reload(href="index.html")
  .slide.n1
    .v-center
      a.btn(href="#participate")
        .title принять участие<br> в конкурсе
      //- br
      //- a.btn(href="#print")
        .title Распечатать фото
      //- .text или
      //- a.btn(href="#email")
        .title Отправить по e-mail
  .slide.center-all.city
    .v-center
      h2 Выберите город
      .select-cont.js-styled-select
        .select-text.js-select-text
        select.styled-select
